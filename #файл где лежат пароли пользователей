#файл где лежат пароли пользователей
/etc/shadow

#пример
root:$6$rounds=5000$66b88edffe451065$dN.Z2UO7mhmMStxoYP4DqtPKMVnYIIirr7mBB/Uz3TxTwlU8qa0wT3Zt8F7uyC8ERmIzEafrK0MDqAy7rYOcO.:18670:0:99999:7:::

root - имя пользователя
$6$rounds=5000$66b88edffe451065$dN.Z2UO7mhmMStxoYP4DqtPKMVnYIIirr7mBB/Uz3TxTwlU8qa0wT3Zt8F7uyC8ERmIzEafrK0MDqAy7rYOcO. - пароль в зашифрованном виде
18670 - количество дней с 1 янв 1970 года
0 - минимальное количество дней, которое пароль должен пробыть (прожить)
99999 - количество дней, через которое пароль исчезнет
7 - за сколько дней предупреждать пользователя перед тем, как пароль исчезнет
следующий параметр - количетсво дней с 1 янв 1970 года, через которое аккаунт будет неактивный
